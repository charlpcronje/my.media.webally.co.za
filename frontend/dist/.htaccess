# SPA Fallback for Vite/React Router
# Redirect all requests to index.html except for existing files and specific static assets
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Explicitly handle static files even if they don't exist in the dist folder
  # This prevents them from being rewritten to index.html
  RewriteRule ^(favicon\.ico|manifest\.json|robots\.txt|sitemap\.xml)$ - [L]
  RewriteRule ^(assets|css|js|images|src)/(.*)$ - [L]
  
  # Don't rewrite files or directories that exist
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Don't rewrite API requests - pass them through to backend
  RewriteRule ^api/(.*)$ /backend/api/$1 [L,QSA]
  
  # Don't rewrite direct API endpoint requests - pass them through to backend
  RewriteRule ^preferences$ /backend/api/preferences.php [L,QSA]
  RewriteRule ^media$ /backend/api/media.php [L,QSA]
  RewriteRule ^tags$ /backend/api/tags.php [L,QSA]
  
  # Rewrite everything else to index.html
  RewriteRule ^ index.html [L]
</IfModule>

# CORS headers for static files
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-API-Key"
</IfModule>
