# Root .htaccess file for the entire application
RewriteEngine On

# Handle OPTIONS requests for CORS preflight
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Redirect API requests to the backend API
RewriteRule ^api/(.*)$ backend/api/$1 [L,QSA]

# Redirect admin requests to the backend admin
RewriteRule ^admin/(.*)$ backend/admin/$1 [L,QSA]

# Allow CORS
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-API-Key"
    Header set Access-Control-Allow-Credentials "true"
</IfModule>

# Ensure that direct requests to specific API endpoints are properly routed
RewriteRule ^preferences$ backend/api/preferences.php [L,QSA]
RewriteRule ^media$ backend/api/media.php [L,QSA]
