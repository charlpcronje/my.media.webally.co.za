{
  "info": {
    "_postman_id": "media-manager-backend-collection",
    "name": "Media Manager Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"your_password\"\n}"
        },
        "url": {
          "raw": "http://localhost/media/backend/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["media", "backend", "api", "auth", "login"]
        }
      }
    },
    {
      "name": "List Media",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>" }
        ],
        "url": {
          "raw": "http://localhost/media/backend/api/media",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["media", "backend", "api", "media"]
        }
      }
    },
    {
      "name": "Add Media (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample Video\",\n  \"type\": \"video\",\n  \"file_path\": \"/uploads/media/video.mp4\"\n}"
        },
        "url": {
          "raw": "http://localhost/media/backend/api/media",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["media", "backend", "api", "media"]
        }
      }
    },
    {
      "name": "Rate Media",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rating\": 5\n}"
        },
        "url": {
          "raw": "http://localhost/media/backend/api/media/1/rate",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["media", "backend", "api", "media", "1", "rate"]
        }
      }
    },
    {
      "name": "Get Analytics",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>" }
        ],
        "url": {
          "raw": "http://localhost/media/backend/api/analytics",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["media", "backend", "api", "analytics"]
        }
      }
    }
  ]
}
